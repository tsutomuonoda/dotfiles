function smartphone_header_scripts($suffix = &quot;_sp&quot;)
{
    $ua = $_SERVER['HTTP_USER_AGENT'];
    $regex = '/(iPhone|Android)/';
    $is_smartphone = preg_match($regex, $ua);
    if (! $is_smartphone) return;

    $r = sfContext::getInstance()-<span class=\"synSpecial\">&amp;#62;</span>getResponse();

    $stylesheets = $r-<span class=\"synSpecial\">&amp;#62;</span>getStylesheets();
    foreach ($stylesheets as $file <span class=\"synType\">=&amp;</span>#62; $opt) {
        $r-<span class=\"synSpecial\">&amp;#62;</span>removeStylesheet($file);
        $r-<span class=\"synSpecial\">&amp;#62;</span>addStylesheet($file . $suffix, '', $opt);
